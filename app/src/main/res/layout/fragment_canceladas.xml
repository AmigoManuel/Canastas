<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CanceladasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_canceladas_title"
            android:textStyle="bold"
            android:textSize="25sp"
            android:padding="4dp"
            android:layout_margin="8dp"
            android:typeface="sans"/>

        <!-- RecyclerView es similar a ListView
        listitem te permite previsualizar el resultado -->

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_canasta"
            android:id="@+id/recyclerViewCompletadas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:clipToPadding="false" />

    </LinearLayout>

</FrameLayout>